{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "src",
    "strict": true,
    "paths": {
      "@infrastructure": ["infrastructure"],
      "@infrastructure/*": ["infrastructure/*"],
      "@services": ["services"],
      "@services/*": ["services/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@features": ["features"],
      "@features/*": ["features/*"],
      "@types": ["types"],
      "@types/*": ["types/*"]
    }
  }
}
